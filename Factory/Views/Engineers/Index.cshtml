@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h2>Your Engineers</h2>

@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet.</h3>
} 
@using (Html.BeginForm())
{
  @Html.Label("Filter Engineers by Name")
  @Html.TextBox("EngineerName")
  <input type="submit" value="Search" class="btn btn-info btn-sm"/>
}<br>
@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
}
<hr>
<div class="row">
  <div class="col-md-6">
    <p>@Html.ActionLink("Add An Engineer", "Create")</p>
  </div>
  <div class="col-md-6">
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
  </div>
</div>

