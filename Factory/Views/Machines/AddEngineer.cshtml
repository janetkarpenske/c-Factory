@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add an Engineer to this machine</h2>

<h4>Add an engineer to @Html.DisplayFor(model => model.MachineName)</h4>

@if(@Model.Engineers.Count == 0)
{
  <p>You haven't created any engineers to assign to this machine yet. Please go to the Engineers page and add an engineer first!</p>
}
else {
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
}
}

<p>@Html.ActionLink("Back to list", "Index")</p>