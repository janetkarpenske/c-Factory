@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>; //specifies we're using the machine model

<h2>Machines</h2>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 
@using (Html.BeginForm())
{
  @Html.Label("Filter Machines by Name")
  @Html.TextBox("MachineName")
  <input type="submit" value="Search" class="btn btn-info btn-sm"/> //value is the button text
}<br>
@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
}
<hr>
<div class="row">
  <div class="col-md-6">
    <p>@Html.ActionLink("Add Machine", "Create")</p>
  </div>
  <div class="col-md-6">
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
  </div>
</div>

