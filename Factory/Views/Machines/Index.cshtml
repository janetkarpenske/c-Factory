@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>; //specifies we're using the machine model

<h2>Machines</h2>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
}

<p>@Html.ActionLink("Add Machine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>